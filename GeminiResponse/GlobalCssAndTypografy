@tailwind base;
@tailwind components;
@tailwind utilities;

/* Estilos Globais e Reset */
body {
  @apply bg-sage-50 text-olive-900 antialiased selection:bg-sage-200 selection:text-olive-900;
  /* Melhorar renderização de fontes */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Utilitários de Tipografia Customizados (Classe .typography não é nativa, usaremos @layer) */
@layer utilities {
  .text-h1 {
    @apply text-3xl md:text-4xl font-bold text-olive-900 tracking-tight leading-tight;
  }
  .text-h2 {
    @apply text-2xl md:text-3xl font-semibold text-olive-900 tracking-tight;
  }
  .text-h3 {
    @apply text-lg md:text-xl font-medium text-olive-800;
  }
  .text-body {
    @apply text-base text-olive-700 leading-relaxed;
  }
  .text-small {
    @apply text-sm text-olive-500;
  }
  .text-currency {
    @apply font-mono font-bold tracking-tight text-olive-900;
  }
  
  /* Utilitário para esconder scrollbar mas manter funcionalidade */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
}